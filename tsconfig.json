{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es2020", "es2015", "dom"], // Ensure you are targeting at least es2020 and "dom" for browser features
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020"
  },
  "include": ["src"]
}
